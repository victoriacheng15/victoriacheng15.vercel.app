---
import PageLayout from "@/layouts/Base";
import { allBooks } from "@/data/books";

const meta = {
	title: "Reading",
	description:
		"Explore my reading journey since 2022 with this comprehensive list of books I've enjoyed.",
};

const currentYear = new Date().getFullYear();
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">Reading</h1>
	<p class="mb-10 text-lg">
		I'm working on developing a habit of choosing book reading over aimlessly scrolling through
		social media. Here's a rundown of the books I've managed to dive into so far! ðŸ“š
	</p>
	{
		allBooks.map(({ year, books }) =>
			year === currentYear ? (
				<details open class="mb-4">
					<summary class="mb-2 text-xl font-bold tracking-wider text-accent">{year}</summary>
					<ul class="grid gap-4">
						{books.map((title) => (
							<li class="ml-8 list-disc text-lg">{title}</li>
						))}
					</ul>
				</details>
			) : (
				<details class="mb-4">
					<summary class="mb-2 text-xl font-bold tracking-wider text-accent">{year}</summary>
					<ul class="grid gap-4">
						{books.map((title) => (
							<li class="ml-8 list-disc text-lg">{title}</li>
						))}
					</ul>
				</details>
			)
		)
	}
</PageLayout>
